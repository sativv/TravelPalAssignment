<Window x:Class="TravelPal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#7B68EE">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" 20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width=" 20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Label Content="TravelPal" FontSize="36" FontWeight="UltraBold" Foreground="#F5FFFA" FontFamily="Arial" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="center"/>
        <Label Content="Username" FontSize="24" FontWeight="UltraBold" Foreground="#F5FFFA" FontFamily="arial" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="center" />
        <Label Content="Password" FontSize="24" FontWeight="UltraBold" Foreground="#F5FFFA" FontFamily="arial" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="center" />

        <TextBox Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Background="#F5FFFA" FontWeight="SemiBold" FontSize="20" Height="45" Margin="20 0 20 0" VerticalAlignment="Bottom" Name="txtUsername"/>
        <PasswordBox Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Background="#F5FFFA" FontWeight="SemiBold" FontSize="20" Height="45" Margin="20 0 20 0" VerticalAlignment="Bottom" Name="txtPassword"/>

        <Button Name="btnLogIn" Grid.Column="2" Grid.Row="5" Width=" 150" Height="50" Content="Log In" FontWeight="Bold" FontSize="24" Background="#F5FFFA" Click="btnLogIn_Click"/>
        <Button Name="btnRegister" Grid.Column="3" Grid.Row="5" Width=" 150" Height="50" Content="Register" FontWeight="Bold" FontSize="24" Background="#F5FFFA" Click="btnRegister_Click"/>
    </Grid>
</Window>
